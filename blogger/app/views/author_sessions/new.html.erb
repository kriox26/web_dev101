<h1></h1>
<%= form_tag author_sessions_path, method: :post do %>
	<div class="field">
		<%= label_tag :email %>
		<%= text_field_tag :email %>
	</div>
	<div class="field">
		<%= label_tag :password %>
		<%= password_field_tag :password %>
	</div>
	<div class="action">
		<%= submit_tag "Login" %>
	</div>
<% end %>
<%= link_to "Back to articles list", articles_path %>
